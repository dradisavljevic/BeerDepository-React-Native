{
  "name": "BeerDepository",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "tsc": "tsc",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "iphone8": "react-native run-ios --simulator=\"iPhone 8\"",
    "build:android:debug": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug && adb reverse tcp:8081 tcp:8081",
    "prettify": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "apisauce": "^1.0.2",
    "prettier": "^1.16.4",
    "react": "16.6.3",
    "react-native": "0.58.6",
    "react-native-elements": "^1.1.0",
    "react-native-image-zoom-viewer": "^2.2.25",
    "react-native-localization": "^2.1.0",
    "react-native-navigation": "2.13.2",
    "react-native-splash-screen": "^3.0.6",
    "react-native-swipe-gestures": "^1.0.3",
    "react-native-vector-icons": "^6.4.1",
    "react-redux": "latest",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "styled-components": "^4.1.3",
    "typesafe-actions": "^3.2.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.0",
    "@types/jest": "24.0.9",
    "@types/react": "16.8.6",
    "@types/react-native": "0.57.38",
    "@types/react-native-vector-icons": "^4.6.4",
    "@types/react-redux": "^7.0.1",
    "@types/redux": "^3.6.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "24.1.0",
    "jest-fetch-mock": "^2.1.1",
    "lint-staged": "^8.1.5",
    "metro-react-native-babel-preset": "0.53.0",
    "react-dom": "^16.8.3",
    "react-native-fast-image": "^5.2.0",
    "redux-saga-test-plan": "^3.7.0",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3333"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ]
  }
}
