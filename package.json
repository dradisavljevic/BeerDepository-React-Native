{
  "name": "BeerDepository",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "tsc": "tsc",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "iphone8": "react-native run-ios --simulator=\"iPhone 8\"",
    "build:android:debug": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug && adb reverse tcp:8081 tcp:8081",
    "prettify": "lint-staged",
    "clean": "rm -rf node_modules/ && npm install",
    "tron": "node_modules/.bin/reactotron",
    "remove-haste": "rm -rf /tmp/hast-map-react-native-packager-*",
    "droid-reverse-port": "adb reverse tcp:9090 tcp:9090",
    "rn-tron-droid": "npm run android && npm run droid-reverse-port"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@react-native-community/netinfo": "^4.6.1",
    "axios": "^0.19.0",
    "prettier": "^1.16.4",
    "react": "16.9.0",
    "react-native": "0.61.4",
    "react-native-gesture-handler": "^1.5.0",
    "react-native-image-zoom-viewer": "^2.2.27",
    "react-native-localization": "^2.1.0",
    "react-native-splash-screen": "^3.0.6",
    "react-native-vector-icons": "^6.4.1",
    "react-navigation": "^4.0.10",
    "react-navigation-stack": "^1.10.3",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.0",
    "@types/react": "16.8.6",
    "@types/react-native": "0.57.38",
    "@types/react-native-vector-icons": "^4.6.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "eslint": "6.6.0",
    "jest": "24.9.0",
    "jest-fetch-mock": "^2.1.1",
    "lint-staged": "^8.1.5",
    "react-dom": "^16.8.3",
    "react-native-fast-image": "^8.3.0",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3333"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ]
  }
}
